<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <!--<Spinner-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:id="@+id/spinner_scan"-->
            <!--android:background="@drawable/bg_spinner"-->
            <!--android:layout_marginRight="20dp">-->

        <!--</Spinner>-->

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Coupon code"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:textAlignment="center"
            android:id="@+id/et_couponcode"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:text="Scan"
            android:textColor="#ffffff"
            android:id="@+id/bt_scan"
            android:background="@drawable/butn_save"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/customer_name"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="35dp"/>
        <EditText
            android:id="@+id/al_et_custr_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="12dp"
            android:background="@drawable/login_bg"
            android:textColorHint="#000000"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/customer_mobilenumber"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"/>
        <EditText
            android:id="@+id/al_et_custr_mobile_number"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="12dp"
            android:background="@drawable/login_bg"
            android:textColorHint="#000000"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"/>

        <Button android:id="@+id/al_bt_redeem_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/redeem_code"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="@drawable/proceed_bg"
            android:textStyle="bold"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>